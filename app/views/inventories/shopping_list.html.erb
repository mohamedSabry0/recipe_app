<div class="mt-4">
  <h2 class="text-center">Shopping List</h2>

  <div class="shopping-list row">
    <div class="col-md-6">
      <p>Amount of food to buy: <%= @shopping_list_foods.length %></p>
      <p>Total price: <%= @shopping_list_foods.sum { |food| food.price * food.quantity } %></p>
    </div>

    <div class="col-md-6 justify-content-end">
      <p>Recipe: <%= link_to @recipe.name, recipe_path(@recipe) %></p>
      <p>Inventory: <%= link_to @inventory.name, inventory_path(@inventory) %></p>
    </div>
  </div>

  <hr />

  <% if @shopping_list_foods.present? %>
    <table class="table table-striped table-bordered mt-3">
      <thead class="table-dark">
        <tr>
          <th scope="col">Food</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price</th>
        </tr>
      </thead>
      <tbody>
        <% @shopping_list_foods.each do |food| %>
          <tr>
            <td><%= food.name %></td>
            <td><%= "#{food.quantity} #{food.measurement_unit}" %></td>
            <td><%= food.price * food.quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No items in the shopping list</p>
  <% end %>
</div>
